{% extends 'base93.html.twig' %}

{% block body_id 'user_new' %}

{% block main %}

{# dump(user) #}

    <h4><i class="far fa-user"></i> {{ 'title.new_user'|trans }}</h4>

    {{ form_start(form) }}

        <div class="form-row">
            <div class="form-group col-md-4">
                {{ form_row(form.firstname) }}
            </div>        
            <div class="form-group col-md-4">
                {{ form_row(form.lastname) }}
            </div>
        </div>
       
        <div class="form-row">
            <div class="form-group col-md-8">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group col-md-4">
                {{ form_row(form.tel) }}
            </div>     
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                {{ form_row(form.password) }}
            </div>        
        </div>

        <div class="form-row">

            <div class="form-group col-sm-6"></div>

            <div class="form-group col-sm-3">
                <a href="{{ path('users_index', {slug: user.center.slug}) }}" class="btn btn-block btn-success">
                    <i class="fas fa-arrow-left" aria-hidden="true"></i> {{ 'title.users_list'|trans }}
                </a>        
            </div>
                        
            <div class="form-group col-sm-3">
                <button type="submit" class="btn btn-block btn-primary">
                    <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                </button>
            </div>
            
        </div>

    {{ form_end(form) }}

    <br>

{% endblock %}


{% block sidebar %}

    {{ parent() }}
    {# show_source_code(_self) #}

{% endblock %}