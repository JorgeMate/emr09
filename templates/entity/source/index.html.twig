{% extends 'base_ad.html.twig' %}

{% block main %}

    <div class="container">

        <div class="row justify-content-between">

            <div class="column">
                <h4>
                    <a href="{{ path('center_cpanel', {slug:app.user.center.slug}) }}">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i>{{ app.user.center.name }}
                    </a> | <i class="far fa-question-circle"></i> {{ 'entity.title_sou'|trans }}
                </h4>
            </div>        

            <div class="column">
                <a href="{{ path('source_new', {slug: app.user.center.slug}) }}" class="btn btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.new'|trans }}
                </a>
            </div>        

        </div>

    </div>
        
    <br>

    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                
                <th></th>
                <th></th>
                <th>{{'entity.title_sou'|trans}}</th>
                <th class="text-center">{{'label.enabled'|trans}}</th>
                <th>{{'label.contact'|trans}}</th>
                <th>{{'label.tel'|trans}}</th>
                <th></th>
                <th>{{'title.patients'|trans}}</th>
                
            </tr>
        </thead>
        <tbody>
            {% for source in sources %}        
            <tr>
                
                <td><a href="{{ path('source_edit', {slug:app.user.center.slug, id:source.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                <td></td>
                <td>{{ source.name }}</td>
                <td class="text-center">
                    {% if source.enabled %} 
                        <i class="fas fa-toggle-on"></i>
                    {% else %}
                        <i class="fas fa-toggle-off"></i>
                    {% endif %}
                </td>

                <td>{{ source.contact }}</td>
                <td>{{ source.tel }}</td>
                <td></td>
                <td class="text-center">{{source.patients|length}} <i class="fas fa-users"></i></td>
                
            </tr>
            {% endfor %}
        </tbody>

    </table>
    
{% endblock %}

{% block sidebar %}

    <div class="section">
    </div>

{% endblock %}
