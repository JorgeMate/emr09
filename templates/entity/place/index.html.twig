{% extends 'base_ad.html.twig' %}

{% block main %}

    <div class="container">

        <div class="row justify-content-between">

            <div class="col-auto">
                <h4>
                    <a href="{{ path('center_cpanel', {slug:slug}) }}">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i>{{ app.user.center.name }}
                    </a> | <i class="fas fa-hospital-alt"></i> {{ 'label.places'|trans }}
                </h4>
            </div>        

            <div class="col text-right">
                <a href="{{ path('source_new', {slug:slug}) }}" class="btn btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.new'|trans }}
                </a>
            </div>        

        </div>

    </div>
        
    <br>

    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                
                <th></th>
                <th></th>
                <th>{{'label.place'|trans}}</th>
                <th class="text-center">{{'label.enabled'|trans}}</th>
                <th>{{'label.contact'|trans}}</th>
                <th>{{'label.tel'|trans}}</th>
                <th></th>
                <th>{{'label.treatments'|trans}}</th>
                
                
            </tr>
        </thead>
        <tbody>
            {% for place in places %}
            <tr>
                
                <td><a href="{{ path('place_edit', {slug:slug, id:place.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                
                <td></td>
                <td>{{ place.name }}</td>
                <td class="text-center">{% if place.enabled %} 
                        <i class="fas fa-toggle-on"></i>
                    {% else %}
                        <i class="fas fa-toggle-off"></i>
                    {% endif %}
                </td>
                <td>{{ place.contact }}</td>
                <td>{{ place.tel }}</td>
                <td></td>
                <td class="text-center">{{place.operas|length}} <i class="fas fa-file-medical-alt"></i></td>
                
                
            </tr>
            {% endfor %}
        </tbody>
    
    </table>
    

{% endblock %}