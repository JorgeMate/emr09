{% extends 'base_ad.html.twig' %}


{% block main %}

<div class="container">

    <div class="row justify-content-between">

        <div class="col-auto">

            <h4>
                <a href="{{ path('center_cpanel', {slug:app.user.center.slug}) }}">
                    <i class="fas fa-arrow-left" aria-hidden="true"></i>{{ app.user.center.name }}
                </a>
                <a href="{{ path('types_index', {slug:app.user.center.slug}) }}">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i>{{ 'label.types'|trans }}
                </a>    
                | <i class="fas fa-procedures"></i> {{type.name}}
                
            </h4>

        </div>        

        <div class="col text-right">
            <a href="{{ path('treatment_new', {slug:app.user.center.slug, id:type.id}) }}" class="btn btn-primary">
                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.new'|trans }}
            </a>
        </div>        

    </div>

</div>

<br>



<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            
            <th><i class="fas fa-file-medical-alt"></i> {{ 'label.treatments'|trans }}</th>
            <th class="text-right">{{ 'label.value'|trans }}</th>
            <th class="text-center">{{'label.enabled'|trans}}</th>
            <th>{{ 'label.notes'|trans }}</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        {% for treatment in treatments %}        
        <tr>
            
            <td>{{ treatment.name }}</td>
            <td class="text-right">{{ treatment.value|number_format(2, ',', '.') }}</td>
            <td class="text-center">{% if treatment.enabled %} 
                    <i class="fas fa-toggle-on"></i>
                {% else %}
                    <i class="fas fa-toggle-off"></i>
                {% endif %}
            </td>
            <td>{{ treatment.notes }}</td>
            <td><a href="{{ path('treatment_edit', {slug:app.user.center.slug, id:treatment.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
            
            
        </tr>
        {% endfor %}
    </tbody>
</table>
    
{% endblock %}

{% block sidebar %}


{% endblock %}