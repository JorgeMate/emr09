{% extends 'base_ad.html.twig' %}

{% block main %}

<div class="form-row">
    <div class="form-group col-md-9">
        <h4>{{'label.treatment'|trans}} <i class="fas fa-file-medical-alt"></i> {{ treatment.name }}</h4>
    </div>
    <div class="form-group col-md-3">
            
    </div>
</div>

{{ form_start(form) }}

    <div class="form-row">

        <div class="form-group col-md-10">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group col-md-2 text-right">
            {{ form_row(form.enabled) }}
        </div>
    
    </div>

    <div class="form-row">

        <div class="form-group col-md-12">
            {{ form_widget(form) }}
        </div>

    </div>




    <div class="form-row">

        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
            </button>
        </div>
    
        {% if is_granted('ROLE_ADMIN') %}
        <div class="form-group col-md-6 text-right">
            
            <a href="{{ path('treats_index', {slug:app.user.center.slug, id: treatment.type.id}) }}" class="btn btn btn-success">
                <i class="fas fa-arrow-left" aria-hidden="true"></i> {{ treatment.type.name }}
            </a>                
        </div>
        {% endif %}
            
    </div>    
        


{{ form_end(form) }}




{% endblock %}