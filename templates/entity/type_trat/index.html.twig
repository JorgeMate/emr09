{% extends 'base_ad.html.twig' %}

{% block main %}

<div class="container">

    <div class="row justify-content-between">

        <div class="column">
            <h4>
                <a href="{{ path('center_cpanel', {slug:app.user.center.slug}) }}">
                    <i class="fas fa-arrow-left" aria-hidden="true"></i>{{ app.user.center.name }}
                </a>
                | <i class="fas fa-procedures"></i> {{ 'label.types'|trans }}
                
            </h4>
        </div>        

        <div class="column text-right">
            <a href="{{ path('type_new', {slug: app.user.center.slug}) }}" class="btn btn-primary">
                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.new'|trans }}
            </a>
        </div>        

    </div>

</div>

<br>



<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            
            <th></th>
            <th>{{ 'label.type'|trans }}</th>
            <th class="text-center">{{ 'label.treatments'|trans }}</th>
            <th class="text-center"></th>
            

        </tr>
    </thead>
    <tbody>
        {% for type in types %}        
        <tr>
            
            
            <td><a href="{{ path('type_edit', {slug:app.user.center.slug, id:type.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
            <td>{{ type.name }}</td>
            <td class="text-center">{{type.treatments|length}}</td>
            <td class="text-center"><a href="{{ path('treats_index', {slug:app.user.center.slug, id:type.id }) }}"><i class="fas fa-search"></i></a></td>
            
        </tr>
        {% endfor %}
    </tbody>
</table>
    
{% endblock %}

{% block sidebar %}
    <div class="section">
    </div>    
{% endblock %}