{% extends 'base93.html.twig' %}

{% block body_id 'center_new' %}

{% block main %}

    <div class="row">
        <div class="col">
            <h3 class="text-info">{{ 'title.center_new'|trans }}</h3>
        </div>
    </div>

    {{ form_start(form) }}

        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.contact_person) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group col-md-4">
                {{ form_row(form.tel) }}
            </div>
        </div>

        <div class="form-row">

            <div class="form-group col-md-6">
                {{ form_row(form.address) }}
            </div>
            <div class="form-group col-md-2">
                {{ form_row(form.postcode) }}
            </div>
            <div class="form-group col-md-4">
                {{ form_row(form.city) }}
            </div>

        </div>           
            

        <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-lg btn-primary">
                    <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                </button>
            </div>
        </div>

    {{ form_end(form) }}

    <br>

{% endblock %}


{% block sidebar %}

    <div class="section">
        <a href="{{ path('centers_index') }}" class="btn btn-lg btn-block btn btn-success">
            <i class="fas fa-arrow-left" aria-hidden="true"></i> {{ 'title.centers_list'|trans }}
        </a>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}


{% endblock %}