{% extends 'base93.html.twig' %}

{% block body_id 'user_password' %}

{% block main %}

    <h4>{{ 'action.change_password'|trans }}</h4>

    {% if app.user.id == user.id %}
        <div class="alert alert-info" role="alert">
            {{ 'info.change_password'|trans }}
        </div>
    {% else %}              
    {% endif %}        

  

    {{ form_start(form) }}
        
            {{ form_widget(form) }}
        
        
            <div class="form-group row">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-block btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                    </button>
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-5">
                    <a href="{{ path('profile_edit') }}" class="btn btn-block btn-success">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i> {{ 'label.cancel'|trans }}
                    </a>                
                </div>
            </div>

    {{ form_end(form) }}



    <br/>


{% endblock %}

{% block sidebar %}

    <div class="container">

        <div class="row">
        </div>

        {{ parent() }}
        {# show_source_code(_self) #}

    </div>

    
{% endblock %}
