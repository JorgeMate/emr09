{% extends 'base93.html.twig' %}

{% block title %}Panel{% endblock %}

{% block header %}
    {{ include('default/_header.html.twig') }}
{% endblock %}

{% block body %}
            
    <div class="section">

        <div class="row">
        
            <div class="col-sm-3">

                <div class="card">
                    <div class="card-header"> 
                        <h5><i class="fas fa-users"></i> {{ 'title.patients'|trans|upper }}</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            {% if app.user.center.id == center.id %}
                            <li class="list-group-item"><i class="fas fa-notes-medical"></i> <a href="">{{ 'action.new'|trans }} {{ 'label.patient'|trans }}</a></li>
                            {% endif %}
                            <li class="list-group-item"><i class="fas fa-list-ol"></i> <a href="">{{ 'label.last.records'|trans }}</a></li>
                            <li class="list-group-item"><i class="fas fa-search"></i> <a href="">{{ 'search_for'|trans }}</a></li>
                        </ul>
                    </div>
                </div>

            </div>
            
            <div class="col-sm-3">


            </div>
                
            <div class="col-sm-3">


            </div>

        </div>  
        
    </div>


{% endblock %} 
