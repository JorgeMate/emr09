{% extends 'base.html.twig' %}

{% block body_id 'opera_new' %}

{% block body %}

<div class="container">

    <div class="row justify-content-between">

        <div class="col-sm-auto">

            <h4>
                
                {{ 'label.treatments'|trans }} <i class="fas fa-procedures"></i>
                 {{ 'label.new_entry'|trans }} | <i class="fas fa-user-injured"></i>
                {{ patient.firstname }} {{ patient.lastname }} &nbsp;
                {% if patient.sex %}
                    <i class="fas fa-venus text-danger"></i>
                {% else %}
                    <i class="fas fa-mars text-info"></i>
                {% endif %}
                {{ patient.dateOfBirth | age }}

            </h4>
 
        </div>

        <div class="col"></div>

    </div>

</div>

<div class="container">

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-row">

        <div class="form-group col-md-3">
            {{ form_row(form.type) }}
        </div>
        <div class="form-group col-md-5">
            {{ form_row(form.treatment) }}
        </div>
        <div class="form-group col-md-4">
      
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-3">
            {{ form_row(form.user) }}
        </div>
        <div class="form-group col-md-5">
            {{ form_row(form.place) }}      
        </div>
        <div class="form-group col-md-3">
            {{ form_row(form.made_at) }}
        </div>
        <div class="form-group col-md-1"></div>
    

    </div>
    
    <div class="form-row">

        <div class="form-group col-md-6">
            <h5><i class="fas fa-user-md"></i> <span class="text-warning" id="js-selected-doctor"></span></h5>
        </div>
       
    </div>

    <div class="form-row">

        <div class="form-group col-md-6">
            <h5><i class="fas fa-procedures"></i> <span class="text-warning" id="js-selected-treatment"></span></h5>
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-6">
            <h5><i class="fas fa-hospital-alt"></i> <span class="text-warning" id="js-selected-place"></span></h5>
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col">
            <a href="{{ path('user_cpanel', {slug:app.user.center.slug}) }}" class="btn btn btn-success">
                <i class="fas fa-undo-alt"></i> {{ 'label.cancel'|trans }}
            </a>         
        </div>
        <div class="form-group col text-right">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
            </button>
        </div>

    </div>

    {{ form_widget(form) }}
    {{ form_end(form) }}
        
</div>


{% endblock %}


{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('assets/js/selectTreatment.js') }}"></script>
  
{% endblock %}

  
