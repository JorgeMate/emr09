{% extends 'base.html.twig' %}

{% block body_id 'medicat_new' %}

{% block body %}

<div class="container">

    <div class="row justify-content-between">

        <div class="col-sm-auto">

            <h4>
                
                {{ 'title.medicat'|trans }} <i class="fas fa-capsules"></i>
                 {{ 'label.new_entry'|trans }} | <i class="fas fa-user-injured"></i>
                {{ patient.firstname }} {{ patient.lastname }} &nbsp;
                {% if patient.sex %}
                    <i class="fas fa-venus text-danger"></i>
                {% else %}
                    <i class="fas fa-mars text-info"></i>
                {% endif %}
                {{ patient.dateOfBirth | age }}

            </h4>

        </div>

        <div class="col"></div>

        

    </div>

    {{ form_start(form, {'attr': {}}) }}

    <div class="row">

        <div class="col-sm-8">

            <div class="row">
    
                <div class="col-sm-6">
                        {{ form_row(form.medicat) }}
        
                </div>
                <div class="col-sm-6">
                        {{ form_row(form.dosis) }}
                </div>
        
            </div>

            {{ form_widget(form) }}

            <div class="form-row text-align-justify">

                <div class="form-group col-sm-4">
                    <a href="{{ path( 'patient_show', {slug:app.user.center.slug, id:patient.id} ) }}" class="btn btn-block btn-success">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i> {{ patient.firstname }} {{ patient.lastname }}
                    </a>                
                </div>                    

                <div class="form-group col-sm-5"></div>
        

                <div class="form-group col-sm-3">
                    <button type="submit" class="btn btn-block btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                    </button>
                </div>
    
            </div>  

        </div>

        <div class="col-sm-4">
            
        </div>


    </div>
    
    {{ form_end(form) }}
    
</div>

{% endblock %}
