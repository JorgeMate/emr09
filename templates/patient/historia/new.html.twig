{% extends 'base.html.twig' %}

{% block body_id 'historia_new' %}



{% block body %}

<div class="container">

    <div class="row justify-content-between">

        <div class="col-sm-auto">

            <h4>
                
                {{ 'title.medHist'|trans }} <i class="far fa-folder-open" aria-hidden="true"></i>
                 {{ 'label.new_entry'|trans }} | <i class="fas fa-user-injured"></i>
                {{ patient.firstname }} {{ patient.lastname }} &nbsp;
                {% if patient.sex %}
                    <i class="fas fa-venus text-danger"></i>
                {% else %}
                    <i class="fas fa-mars text-info"></i>
                {% endif %}
                {{ patient.dateOfBirth | age }}

            </h4>

        </div>

        <div class="col"></div>

    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="row">

        <div class="col-sm-8">

            <div class="row">
    
                <div class="col-sm-3">
                        {{ form_row(form.date) }}
        
                </div>
                <div class="col-sm-9 align-right">
                        {{ form_row(form.problem) }}
                </div>
        
            </div>

            {{ form_widget(form) }}

            <div class="form-row text-align-justify">

                <div class="form-group col-sm-4">    
                    <a href="{{ path('patient_show', {slug: center.slug, id:patient.id}) }}" class="btn btn-block btn-success">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i> {{ patient.firstname }} {{ patient.lastname }}
                    </a>
                </div>
        
                <div class="form-group col-sm-5"></div>


                <div class="form-group col-sm-3">
                    <button type="submit" class="btn btn-block btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                    </button>
                </div>
    

            </div>

        </div>

        <div class="col-sm-4">
            
        </div>


    </div>

    {{ form_end(form) }}
    
</div>

{% endblock %}
