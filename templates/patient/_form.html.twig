            <br>

            <div class="form-row">
                <div class="col-sm-6">
                    {{ form_row(form.insurance) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.source) }}  
                </div>    
            </div>

            <div class="form-row">
    
                <div class="form-group col-12">
                    {{ form_row(form.notes) }}
                </div>

            </div>    
        </div>        

    </div>

    {# include('/form/fields.html.twig') #}

    <div class="form-row">
        <div class="form-group col">
            <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
                <i class="fa fa-save" aria-hidden="true"></i> {{ button_label|default('action.save'|trans) }}
            </button>
        </div>
        <div class="form-group col text-right">

            {% if include_back_to_home_link|default(false) %}
            <a href="{{ path('patient_show', {slug:app.user.center.slug, id:patient.id} ) }}" class="btn btn-outline-success">
                    <i class="fas fa-undo"></i> {{ 'label.cancel'|trans }}
                </a>
            {% endif %}
                                
        </div>
    </div>

