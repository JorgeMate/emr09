            <br>

            <div class="form-row">

                <div class="form-group col-md-7">
                    {{ form_row(form.contact) }}
                </div>
                <div class="form-group col-md-5">
                    {{ form_row(form.tel_con) }}
                </div>
            
            </div>

            <div class="form-row">

                <div class="form-group col-md-7">
                    {{ form_row(form.doctor) }}
                </div>
                <div class="form-group col-md-5">
                    {{ form_row(form.tel_doc) }}
                </div>
            
            </div>
    

        </div>

